<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <Id>2d1bb0b1-b678-4984-8ecc-3ccac5e1f5d6</Id>
  <Version>1.0.0.3</Version>
  <ProviderName>Contoso</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Outlook AI Assistant"/>
  <Description DefaultValue="A tool to generate Business mails from a simple sentence."/>
  <IconUrl DefaultValue="https://localhost:3000/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3000/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://www.contoso.com/help"/>
  <AppDomains>
    <AppDomain>https://www.contoso.com</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost:3000/translate.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="AI.msgComposeGroup">
                <Label resid="GroupLabelCompose"/>
                <Control xsi:type="Button" id="BusinessMail">
                  <Label resid="BusinessMail.Label"/>
                  <Supertip>
                    <Title resid="BusinessMail.Label"/>
                    <Description resid="BusinessMail.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>action</FunctionName>
                  </Action>
                </Control>
                <Control xsi:type="Button" id="Tanslate">
                  <Label resid="Tanslate.Label"/>
                  <Supertip>
                    <Title resid="Tanslate.Label"/>
                    <Description resid="Tanslate.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>action</FunctionName>
                  </Action>
                </Control>
                <Control xsi:type="Button" id="CorrectFormat">
                  <Label resid="CorrectFormat.Label"/>
                  <Supertip>
                    <Title resid="CorrectFormat.Label"/>
                    <Description resid="CorrectFormat.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>action</FunctionName>
                  </Action>
                </Control>
                <Control xsi:type="Button" id="SetToken">
                  <Label resid="SetToken.Label"/>
                  <Supertip>
                    <Title resid="SetToken.Label"/>
                    <Description resid="SetToken.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>onNewMessageComposeHandler</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://localhost:3000/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://localhost:3000/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://localhost:3000/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://localhost:3000/commands.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabelCompose" DefaultValue="AI Assistant"/>
        <bt:String id="GroupLabelRead" DefaultValue="AI Assistant"/>
        <bt:String id="BusinessMail.Label" DefaultValue="Generate business mail"/>
        <bt:String id="Tanslate.Label" DefaultValue="Translate to english"/>
        <bt:String id="CorrectFormat.Label" DefaultValue="Correct spelling and grammar"/>
        <bt:String id="SetToken.Label" DefaultValue="Set OpenAI token"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Opens a pane to configure the Open AI token"/>
        <bt:String id="BusinessMail.Tooltip" DefaultValue="Generate business mail starting from selected text."/>
        <bt:String id="Tanslate.Tooltip" DefaultValue="Translate the selected text to english."/>
        <bt:String id="CorrectFormat.Tooltip" DefaultValue="Correct spelling and grammar of the selected text."/>
        <bt:String id="SetToken.Tooltip" DefaultValue="Set user personal OpenAI token."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>